  <script>
    function createPopup() {
      const popup = document.createElement('div');
      popup.classList.add('popup');
      popup.style.top = Math.random() * (window.innerHeight - 110) + 'px';
      popup.style.left = Math.random() * (window.innerWidth - 220) + 'px';
      popup.innerHTML = `
        <h3>Nhi khÃ¹n Nhi khÃ¹n!</h3>
      `;
      document.body.appendChild(popup);
      setTimeout(createPopup, 350);
    }

    function createHeart() {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = (Math.random() * 3 + 3) + 's';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 6000);
    }

    function createPoop() {
      const poop = document.createElement('div');
      poop.classList.add('poop');
      poop.style.left = Math.random() * 100 + 'vw';
      poop.style.animationDuration = (Math.random() * 4 + 3) + 's';
      poop.innerHTML = '<img src="poop.png" alt="ðŸ’©">';
      document.body.appendChild(poop);
      setTimeout(() => poop.remove(), 7000);
    }

    document.getElementById('startButton').addEventListener('click', () => {
      createPopup();
      setInterval(createHeart, 200);
      setInterval(createPoop, 350);
      document.getElementById('bgMusic').play();
      document.getElementById('startButton').remove();
    });
  </script>
